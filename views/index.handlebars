<h1>Eat Burgers</h2>

<!--Pass in data from server.js --> 

<ul>
  {{#each burgers}}
  	 <li>
  	 <p><span class="label">ID:</span>
  	 {{this.id}} <span class="label">Order: {{this.burger_name}}</span> <span class="label">Time: </span> {{this.date}}</p>

     <p><span class="label">Status: {{this.devoured}}</span></p>

  	 <form action="/{{this.id}}?_method=DELETE"method="POST">
  	 <input type="hidden" name="id"
  	 value="{{this.id}}">
  	 <button type="submit">Delete</button>
  	 </form>


  	 <a href="/{{this.id}}">Eat This Burger</a>
  	</li>
  	{{/each}}
  </ul>

  <h2>Add A Burger</h2>

  <form class="create-form" action="/" method="POST">

  <div class="form-group">
  	<label for="order">Order:</label>
  	<textarea id="newBurger" name="burgerOrder" rows="4" cols="40"></textarea>
  </div>

  <button type="submit">Add Order</button>
 </form>